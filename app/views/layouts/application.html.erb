<!DOCTYPE html>
<html>
  <head>
    <title>TaskmanagementMpa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light head">
      <h2 class="navbar-brand" href="#">タスク管理</h2>

    </nav>
    <p id="notice"><%= notice %></p>

    <div class="contents">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-9">
           <%= yield %>
        </div>
        <div class="col-sm-2 side">
           <ul class="panel panel-primary">
             <li class="active"><%= link_to "タスク一覧", tasks_path, :style=>"color:white;" %></li>
             <li><%= link_to "作成", new_task_path, :style=>"color:white;" %></li>
           </ul>
        </div>

      </div>
    </div>
  </body>
</html>
